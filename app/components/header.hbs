<header class="masthead">
  <h3 class="masthead-brand">
    <Gravatar
      @hash={{@gravatar}}
      @size={{50}}
      alt="avatar"
    />
  </h3>

  <nav class="masthead-nav">
    {{#each @links as |link|}}
      <a href={{link.url}} class="nav-link" target="_blank" rel="noopener">
        {{link.title}}
      </a>
    {{/each}}
  </nav>
</header>